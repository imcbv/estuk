<%= simple_form_for(@book, html:{class: "form-signin"}) do |f| %>
  <%= f.error_notification %>


    <%= f.input :name, required: true, label: false, placeholder: "Name", input_html: {class: "form-control"} %>
    <%= f.input :author, required: true, label: false, placeholder: "Author", input_html: {class: "form-control"} %>
    <%= f.input :desciption, required: true, label: false, placeholder: "Dscription", input_html: {class: "form-control", rows: 5} %>
    <%= f.input :image %>
    <%= f.input :resource %>
    <br>
    <%= f.input :price, required: true, label: false, placeholder: "Price", input_html: {class: "form-control"} %>
    <div class="checkbox text-center">
        <p>
        Availability 
      </p>
        <%= f.input :availability, required: false, label: false %> 
    </div>



    <%= f.button :submit, class: "btn btn-primary btn-lg" %>

<% end %>
